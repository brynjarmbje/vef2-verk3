generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  username String  @unique
  password String
  admin    Boolean @default(false)
}

model Team {
  id          Int    @id @default(autoincrement())
  name        String @unique
  slug        String @unique
  description String?
  homeGames   Game[] @relation("HomeTeam") // Relation for games where the team is playing at home
  awayGames   Game[] @relation("AwayTeam") // Relation for games where the team is playing away
}

model Game {
  id         Int      @id @default(autoincrement())
  date       DateTime @default(now())
  home       Int
  away       Int
  home_score Int
  away_score Int
  homeTeam   Team     @relation("HomeTeam", fields: [home], references: [id])
  awayTeam   Team     @relation("AwayTeam", fields: [away], references: [id])
}